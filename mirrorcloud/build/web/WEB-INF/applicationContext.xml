    <!-- ADD PERSISTENCE SUPPORT HERE (jpa, hibernate, etc) -->
    
    <bean id="user" class="mirror.web.User"/>
    <bean id="systemDetail" class="mirror.web.SystemDetail"/>
    <bean id="sharedLink" class="mirror.web.SharedLink"/>
    <bean id="userPC" class="mirror.web.UserPC">
        <property name="detail" ref="systemDetail"/>
    </bean>
    <bean id="dirtyReason" class="mirror.web.DirtyReason"/>
    <bean id="pushedFileRecord" class="mirror.web.PushedFileRecord"/>
    <bean  id="multipartResolver" class="org.springframework.web.multipart.support.StandardServletMultipartResolver"/>
    <bean name="dataSource" id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/mirrorweb"/>
        <property name="username" value="maddy"/>
        <property name="password" value="12345"/>
    </bean>
    <bean id="userDAOImpl" class="mirror.web.UserDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="pushedFileDaoImpl" class="mirror.web.PushedFileDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="pcDAOImpl" class="mirror.web.PcDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>    
    <bean id="sharedLinkDAOImpl" class="mirror.web.SharedLinkDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>
